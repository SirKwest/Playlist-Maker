<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/create_playlist_bt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cornerRadius="16dp"
        android:textAllCaps="false"
        android:backgroundTint="?attr/colorPrimaryInverse"
        android:textColor="?attr/colorAccent"
        android:layout_gravity="center"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/ys_display_medium"
        android:text="@string/new_playlist"
        android:letterSpacing="0.0"
        android:textSize="14sp"/>

    <ImageView
        android:id="@+id/empty_playlist_iv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:layout_gravity="center"
        android:src="?attr/emptySearchDrawable"
        tools:ignore="contentDescription" />

    <TextView
        android:id="@+id/empty_playlist_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="16dp"
        style="@style/FragmentPlaceholderTextStyle"
        android:text="@string/playlist_none"/>
    
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/playlist_rv"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>