<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="61dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/playlist_bottom_sheet_iv"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="12dp"
        tools:ignore="contentDescription"
    />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/playlist_name_bottom_sheet_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:gravity="start|center_vertical"
            android:textColor="?attr/colorSurfaceVariant"
            android:textSize="@dimen/text_title_size"
            style="@style/TrackAttributeStyle"
        />

        <TextView
            android:id="@+id/playlist_track_count_bottom_sheet_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/TrackAttributeStyle"
        />

        </LinearLayout>
</LinearLayout>